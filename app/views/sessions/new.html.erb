<h1>Please Sign In</h1>

<%= form_tag do %>
  <div class="form-group">
    <%= label_tag :username %>
    <%= text_field_tag :username, "", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password, "", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= submit_tag "Sign In", class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
